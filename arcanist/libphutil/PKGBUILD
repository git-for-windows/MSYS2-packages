# Maintainer: 

pkgname=('libphutil')
pkgdesc="A collection of PHP utility classes"
arch=('i686' 'x86_64')
url="https://secure.phabricator.com/book/phabricator/article/arcanist/"
makedepends=('libcrypt-devel' 'libuuid-devel')
options=('!libtool')
license=('APACHE')
source=(https://github.com/phacility/libphutil/archive/master.zip)

prepare() {
  cd "${srcdir}/arcanist/libphutil"

  autoreconf -fi
}

build() {
  cd "${srcdir}/arcanist/libphutil"
  ./configure --build=${CHOST} \
      --prefix=/usr \
      --libexecdir=/usr/lib/arcanist/libphutil \
      --datadir=/usr/share/arcanist/libphutil \
      --enable-layout=Debian \
      ac_cv_header_windows_h=no \
      ac_cv_header_winsock2_h=no

  make
  make DESTDIR="${srcdir}/dest" install
}

/*
check() {
  cd "${srcdir}/apr-${pkgver}"
  make -j1 check
}
/*

package_arcanist_libphutil() {
  depends=('libcrypt' 'libuuid')
  groups=('libraries')

  mkdir -p ${pkgdir}/usr/{bin,share}
  cp -f ${srcdir}/dest/usr/bin/*.dll ${pkgdir}/usr/bin/
  #cp -rf ${srcdir}/dest/usr/share/doc ${pkgdir}/usr/share/
}
